{% extends "index.njk" %}

{% block mainContent %}
    <form action="/" method="POST">
        <textarea name="submittedValues" id="submittedValues">{{submittedValues}}</textarea>
        {% if valueTresholds %}
        <select name="aviosValue">
            {% for item in valueTresholds %}
                <option value="{{item.value}}" {% if item.value == aviosValue %}selected{% endif %}>
                    {{item.name}}
                </option>
            {% endfor %}
        </select>
        {% endif %}
        <button type="submit">Submit</button>
    </form>
    {% if processed %}
        <h2>Result</h2>
        <p>If you value an Avios point at {{aviosValue}}, these are the total possible costs of your redemption:</p>
        <dl>
            {% for item in processed %}
                <dt>{{ item.input }}</dt>
                <dd>{{ item.value }}</dd>
            {% endfor %}
        </dl>
    {% endif %}
{% endblock %}