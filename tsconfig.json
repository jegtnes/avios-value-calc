{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*"]
        },
        "typeRoots": [
            "node_modules/@types",
            "node_modules/koa-body"
        ]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}
